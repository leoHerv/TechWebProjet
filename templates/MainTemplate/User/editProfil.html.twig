{% extends 'Base/baseForm.html.twig' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/User/editProfil.css') }}" />
{% endblock %}

{% block body %}

    <div class="form">

        {{ form_start(form, {'attr': {'class': 'divForm'}}) }}

        <h3>Edit Profile</h3>

        <div class="editWidget">
            {{ form_label(form.login) }}
            {{ form_widget(form.login) }}
        </div>
        {{ form_errors(form.login, {'attr': {'class': 'errorForm'}}) }}
        <div class="editWidget">
            {{ form_label(form.password) }}
            {{ form_widget(form.password) }}
        </div>
            {{ form_errors(form.password, {'attr': {'class': 'errorForm'}}) }}
        <div class="editWidget">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
            {{ form_errors(form.name, {'attr': {'class': 'errorForm'}}) }}
        <div class="editWidget">
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName) }}
        </div>
            {{ form_errors(form.firstName, {'attr': {'class': 'errorForm'}}) }}
        <div class="editWidget">
            {{ form_label(form.mail) }}
            {{ form_widget(form.mail) }}
        </div>
            {{ form_errors(form.mail, {'attr': {'class': 'errorForm'}}) }}
        <div class="editWidget">
            {{ form_label(form.birthDate) }}
            {{ form_widget(form.birthDate) }}
        </div>
            {{ form_errors(form.birthDate, {'attr': {'class': 'errorForm'}}) }}
        {{ form_row(form._token) }}

        <button type="submit" id="user_sign_in_send" name="user_sign_in[send]">Edit</button>

    </div>
{% endblock %}