{% extends 'Base/base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/Product/printProducts.css') }}" />
{% endblock %}

{% block body %}
    <p>panier</p>
    <ul>
        <li> prix : {{ panier.price }}</li>
        <li> quantit√© : {{ panier.quantity }} </li>
       {#  {% for lineproduct in panier.id_LineProducts %}
            {{ lineproduct.id_product.nom }}
        {% endfor %}
#}
    </ul>

    <div class="productForm">
        <p class="productField nameAndPrice textS">Name</p>
        <p class="productField nameAndPrice textS">Price</p>
        <p class="productField quantityInBag">InBag</p>
        <div class="selectAndButton">
            <p class="textS">Select quantity</p>
        </div>
        <div class="selectAndButton">
            <p class="textS">Send to bag</p>
        </div>
    </div>

{% for lineproduct in panier.id_LineProducts %}

<form class="productForm" action="/product/removeProductFromBag/{{ lineproduct.id_product.id }}">

    <p class="productField nameAndPrice textS">{{ lineproduct.id_product.nom }}</p>
    <p class="productField nameAndPrice textS">{{ lineproduct.id_product.prix }}</p>
    <p class="productField quantityInBag">{{ lineproduct.quantity }}</p>
    <div class="selectAndButton">
        <select name="quantity" class="selectQ">

            {% for i in 0..lineproduct.quantity %}

                <option value="{{ i }}">{{ i }}</option>

            {% endfor %}

        </select>
    </div>
    <div class="selectAndButton">
        <button type="submit">Remove</button>
    </div>

</form>
{% endfor %}

{% endblock %}
